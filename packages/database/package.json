{
  "name": "@repo/db",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "type": "module",
  "types": "./index.ts",
  "exports": {
    ".": {
      "types": "./index.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev --name auto",
    "db:deploy": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "resync-usage": "tsx scripts/resync-usage-counts.ts",
    "build": "prisma generate && tsup ./index.ts --format cjs,esm",
"dev": "tsup ./index.ts --format cjs,esm --watch"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.15.30",
    "@types/pg": "^8.15.6",
    "prisma": "^7.1.0",
    "tsup": "^8.5.0",
    "tsx": "^4.21.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "@prisma/client-runtime-utils": "^7.1.0",
    "dotenv": "^17.2.3",
    "pg": "^8.16.3"
  }
}