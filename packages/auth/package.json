{
  "name": "@repo/auth",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./auth": {
      "types": "./dist/auth.d.ts",
      "default": "./dist/auth.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/auth.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/auth.ts --format cjs,esm --dts --watch"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@repo/db": "workspace:*",
    "better-auth": "^1.4.1",
    "resend": "^6.5.2"
  }
}