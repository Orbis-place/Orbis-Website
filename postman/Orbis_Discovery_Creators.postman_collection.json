{
	"info": {
		"_postman_id": "discovery-creators-2024",
		"name": "Orbis - Discovery Creators API",
		"description": "Creator discovery endpoints for browsing and finding top creators",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Creator Discovery",
			"item": [
				{
					"name": "Get Weekly Leaderboard",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/discovery/creators/weekly-leaderboard?limit=10",
							"host": ["{{base_url}}"],
							"path": ["discovery", "creators", "weekly-leaderboard"],
							"query": [
								{
									"key": "limit",
									"value": "10",
									"description": "Number of creators to return (default: 10)"
								}
							]
						},
						"description": "Get top creators ranked by total downloads. Returns leaderboard with rank, creator info, and download stats."
					},
					"response": []
				},
				{
					"name": "Get Top Creators by Category",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/discovery/creators/top-by-category",
							"host": ["{{base_url}}"],
							"path": ["discovery", "creators", "top-by-category"]
						},
						"description": "Get the top creator for each resource category (mods, plugins, worlds, etc.)"
					},
					"response": []
				},
				{
					"name": "Get Random Creators (Shuffle)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/discovery/creators/shuffle?limit=6",
							"host": ["{{base_url}}"],
							"path": ["discovery", "creators", "shuffle"],
							"query": [
								{
									"key": "limit",
									"value": "6",
									"description": "Number of random creators to return (default: 6)"
								}
							]
						},
						"description": "Get random creators for discovery shuffle feature"
					},
					"response": []
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3001",
			"type": "string"
		}
	]
}
